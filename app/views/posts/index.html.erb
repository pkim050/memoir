<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email.split('.')[0].capitalize %> <%= post.user.email.split('.')[1].split('@')[0].capitalize %></td>
        <td><%= link_to 'Show', user_post_path(current_user, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(current_user, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(current_user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path %>
